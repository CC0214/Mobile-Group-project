<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <ImageView
            android:id="@+id/pop_img"
            android:layout_width="280dp"
            android:layout_height="190dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@mipmap/offers3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:text="Popular Products"
            android:textSize="19sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/pop_des"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="description" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
        <ImageView
            android:layout_width="78dp"
            android:layout_height="38dp"
            android:src="@drawable/ratingbar"
            android:layout_marginLeft="-5dp" />
        <TextView
            android:id="@+id/pop_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="5.0"
            android:layout_weight="1"
            android:fontFamily="@font/aclonica" />
        <TextView
            android:id="@+id/pop_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Discount 20% Off"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:gravity="end"
            android:fontFamily="@font/aclonica" />
    </LinearLayout>
</androidx.cardview.widget.CardView>